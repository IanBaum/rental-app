{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
  <div>
    <form>
      <div class="form-group">
        <label>Title</label>
        {{input type="text" value=title id="title"}}

        <label>Message</label>
        {{input type="text" value=message id="message"}}

        <label>Time</label>
        {{input type="datetime" value=time id="time"}}

        <label>Image</label>
        {{input type="url" value=img id="img"}}
      </div>

      <button {{action 'saveAnnouncement1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
